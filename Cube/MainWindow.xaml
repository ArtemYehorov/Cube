<Window x:Class="Cube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cube"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="Canvas">
            <Label Name="Box" MouseMove="Box_MouseMove" MouseLeftButtonDown="Box_MouseLeftButtonDown" MouseLeftButtonUp="Box_MouseLeftButtonUp" HorizontalAlignment="Left" VerticalAlignment="Top" Height="100" Width="100" Background="Red"/>
        </Canvas>
        <TextBox Name="cmdX" TextChanged="cmdX_TextChanged" Text="1" HorizontalAlignment="left" Margin="90,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="cmdY" TextChanged="cmdY_TextChanged" Text="1" HorizontalAlignment="left" Margin="90,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>

</Window>
